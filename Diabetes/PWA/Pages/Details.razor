@inject HttpClient Http

@if (account != null)
{
    <header class="profileName">
        <h1>@account.FirstName @account.LastName</h1>
    </header>
    <StatsContainer></StatsContainer>

    <div class="detailSettings">
        @if (isNote)
        {
            <div class="active">
                <i class="fa fa-pencil-square-o"></i>
            </div>
            <div @onclick="SetViewToNotifications">
                <i class="fa fa-bell"></i>
            </div>
        }
        else
        {
            <div @onclick="SetViewToNotes">
                <i class="fa fa-pencil-square-o"></i>
            </div>
            <div class="active">
                <i class="fa fa-bell"></i>
            </div>
        }
    </div>

    @if (isNote)
    {
        <section class="notes">
            <DetailNote Id="1"></DetailNote>
            <DetailNote Id="0"></DetailNote>
        </section>
    }
    else
    {
        <CurrentNotificationsDetails notifications="notifications"></CurrentNotificationsDetails>
    }
}
else
{
    <p>Loading...</p>
}

@code {
    [Parameter]
    public Account account { get; set; }
    [Parameter]
    public List<NotificationData> notifications { get; set; }
    private bool isNote = true;

    public void SetViewToNotes()
    {
        isNote = true;
    }

    public void SetViewToNotifications()
    {
        isNote = false;
    }
}
