@inject HttpClient Http

@if (account != null)
{
    <header class="profileName">
        <h1>@account.FirstName @account.LastName</h1>
    </header>
    <StatsContainer></StatsContainer>

    <div class="detailSettings">
        @if (isNote)
        {
            <div class="active">
                <i class="fa fa-pencil-square-o"></i>
            </div>
            <div @onclick="SetViewToNotifications">
                <i class="fa fa-bell"></i>
            </div>
        }
        else
        {
            <div @onclick="SetViewToNotes">
                <i class="fa fa-pencil-square-o"></i>
            </div>
            <div class="active">
                <i class="fa fa-bell"></i>
            </div>
        }
    </div>

    @if (isNote)
    {
        <section class="notes">
            <DetailNote Id="1"></DetailNote>
            <DetailNote Id="0"></DetailNote>
        </section>
    }
    else
    {
        <CurrentNotificationsDetails UserID="@userID"></CurrentNotificationsDetails>
    }
}
else
{
    <p>Loading...</p>
}

@code {
    [Parameter]
    public string userID { get; set; }

    private Account account;
    private bool isNote = true;

    protected override async Task OnInitializedAsync()
    {
        account = await Http.GetFromJsonAsync<Account>("api/account/get.json");
    }

    class Account
    {
        public string ID { get; set; }
        public string FirstName { get; set; }
        public string LastName { get; set; }
        public string Email { get; set; }
        public string PhoneNumber { get; set; }
        public string NSLink { get; set; }
        public bool IsEUMeasure { get; set; }
    }

    public void SetViewToNotes()
    {
        isNote = true;
    }

    public void SetViewToNotifications()
    {
        isNote = false;
    }
}
