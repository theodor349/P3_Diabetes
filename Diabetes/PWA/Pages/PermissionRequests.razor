<section class="permissionContainer">
    <div class="manageWatcherTitle dark">
        <h4>Pending Requests</h4>
    </div>
    <div class="scrollbar" style="height: 450px;">
        @if (permissionRequests != null)
        {
            @foreach (var request in permissionRequests)
            {
                <PermissionRequestComponent Requests="request" Accept="Accept" Decline="Decline"></PermissionRequestComponent>
            }
        }
    </div>
</section>

@code {
    [Parameter] public List<PermissionRequestModel> permissionRequests { get; set; }
    [Parameter] public EventCallback<int> Accept { get; set; }
    [Parameter] public EventCallback<int> Decline { get; set; }
}
