@inject IJSRuntime JS

@if (Status == ArrowDirection.SingleUp)
{
    <i class="fi-xwluxl-arrow-corner-wide"> </i>
}
else if (Status == ArrowDirection.SingleDown)
{
    <i class="fi-xwlrxl-arrow-corner-wide"> </i>
}
else
{
    <i class="fi-xnlrxl-arrow"> </i>
}


@code {
    [Parameter] public ArrowDirection Status { get; set; }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("updateIcons");
        }
    }
}
