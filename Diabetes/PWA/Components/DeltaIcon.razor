@switch (Status)
{
    case ArrowDirection.SingleUp:
        <i class="fas fa-long-arrow-alt-up"></i>
        break;
    case ArrowDirection.DoubleUp:
        <i class="fas fa-long-arrow-alt-up"></i>
        break;
    case ArrowDirection.SingleDown:
        <i class="fas fa-long-arrow-alt-down"></i>
        break;
    case ArrowDirection.DoubleDown:
        <i class="fas fa-long-arrow-alt-down"></i>
        break;
    case ArrowDirection.Flat:
        <i class="fas fa-long-arrow-alt-right"></i>
        break;
    case ArrowDirection.FortyFiveUp:
        <img class="arrowIcon" src="/img/singlearrow45up.svg" alt="">
        break;
    case ArrowDirection.FortyFiveDown:
        <img class="arrowIcon" src="/img/singlearrow45down.svg" alt="">
        break;
    case ArrowDirection.Null:
        break;
    default:
        break;
}

@code {
    [Parameter] public ArrowDirection Status { get; set; }
}
